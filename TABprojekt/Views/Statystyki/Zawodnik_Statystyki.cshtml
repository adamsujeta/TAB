@model IEnumerable<TABprojekt.Models.Statystyki>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.bramki)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kartkiCzerwone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kartkiZolte)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.bramki)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kartkiCzerwone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kartkiZolte)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
